<h1>Edit user</h1>

<%=form_for @user do |f|%>

    <label>First Name:</label>
    <%= f.text_field :first_name %>
    <label>Last Name:</label>
    <%= f.text_field :last_name %> <br><br>

    <label>Birthday:</label>
    <%= f.date_field :dob %> <br><br>

    <label>Email:</label>
    <%= f.text_field :email %>
    <label>Phone:</label>
    <%= f.text_field :phone %> <br><br>



    <%= f.fields_for :address do |addr| %>
        <%= addr.label :street_address %>
        <%= addr.text_field :street_address, placeholder: @address.street_address %><br>

        <%= addr.label :city %>
        <%= addr.text_field :city, placeholder: @address.city %><br>

        <%= addr.label :state %>
        <%= addr.text_field :state, placeholder: @address.state %><br>

        <%= addr.label :postcode %>
        <%= addr.text_field :postcode, placeholder: @address.postcode %><br>

        <%= addr.label :address_type %>
        <%= addr.text_field :address_type, placeholder: @address.address_type %><br>
    <%end%>

    <%=f.submit "Submit Changes"%>
<%end%>